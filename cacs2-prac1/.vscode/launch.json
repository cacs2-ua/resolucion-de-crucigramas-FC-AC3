    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "Python: Debug tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": ["${workspaceFolder}/tests/test_main.py"],
            "console": "integratedTerminal"
        }
    ]
}